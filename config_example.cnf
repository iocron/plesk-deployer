# DEPLOYMENT - CONFIGS (your configuration)
CONFIGS_DEFAULT=1
CONFIGS_CUSTOM=1
LINUX_PACKAGES="htop nano"
PLESK_FIREWALL=1
PLESK_FAIL2BAN=1
PLESK_CSS=1
NGINX_GZIP=1
SCRIPTS_DEFAULT=1
SCRIPTS_CUSTOM=1

# SYSTEM - CONFIGS
SCRIPT=$BASH_SOURCE
SCRIPTPATH=$(dirname "$BASH_SOURCE")
LIB_PATH=$SCRIPTPATH/lib
CONFIGS_PATH=$SCRIPTPATH/configs
CONFIGS_PATH_DEFAULT=$CONFIGS_PATH/default
CONFIGS_PATH_CUSTOM=$CONFIGS_PATH/custom
TIME_FORMAT="%Y-%m-%d_%M:%S"
TIME_FORMAT_FILE="%Y-%m-%d-%M%S"
DISTRO=$(python -mplatform)
ERROR_LOG=$SCRIPTPATH/logs/error.log

# SYSTEM - COLOR CODES
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
UNDERLINE=$(tput smul)
COLOR_RESET=$(tput sgr0)

# SYSTEM - MESSAGES
MSG_TYPES="ERROR, WARNING, INFO, DONE"
MSG_ERROR="[ERROR]:"
MSG_WARNING="[WARNING]:"
MSG_INFO="[INFO]:"
MSG_DONE="[FINISHED]:"
MSG_RESET="${COLOR_RESET}"
